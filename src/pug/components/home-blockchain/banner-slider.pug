#blockchain-banner-slider
  .banner-wrap
    #banner-slider.carousel-banner
      #slide1.slide
        .inner
          .img.background-banner
            |
            |
            img(
              src=imgAPI.blockchain[0]
              alt='background'
            )/
            |
            |
          .container
            .row.align-items-center
              .col-md-7.col-sm-12.px-0
                .text
                  h4.use-mq--title
                    | #{$t.blockchain.banner_title}
                    span.text-uppercase.use-theme--grd-text &nbsp;
                      | #{$t.blockchain.banner_highlight}
                  h5.use-mq--subtitle #{$t.blockchain.banner_desc}
                  .btn-area
                    a.btn.waves-effect.btn-large.button.secondary(href=link.register)
                      | #{$t.btn_get}
                    |
                    |
                    a.btn.btn-outlined.waves-effect.btn-large.button.primary(href="#")
                      | #{$t.btn_detail}
                    |
                    |
              .col-md-5.col-sm-12
                .deco-banner.show-md-up
                  .parallax-scene.right-scene
                    #scene1
                      div(data-depth="0.2")
                        |
                        |
                        span.hexa
                          img(src=imgAPI.blockchain[1] alt="parallax")/
                        |
                        |
                      div(data-depth="0.4")
                        |
                        |
                        span.cube
                          img(src=imgAPI.blockchain[2] alt="parallax")/
                        |
                        |
                      div(data-depth="0.2")
                        |
                        |
                        span.cube-blur
                          img(src=imgAPI.blockchain[3] alt="parallax")/
                        |
                        |
                      div(data-depth="0.3")
                        |
                        |
                        span.accent-blur
                        |
                        |
      #slide2.slide
        .inner
          .container
