                        |
      #slide3.slide.center-content
        .inner
          .container
            .row.justify-content-center
              .col-md-9.col-sm-11.px-md-12
                .text.text-center(class="lg:pt-10")
                  h4.use-mq--title
                    | #{$t.blockchain.banner_title}
                    span.text-uppercase.use-theme--grd-text &nbsp;
                      | #{$t.blockchain.banner_highlight}
                  h5.use-mq--subtitle #{$t.blockchain.banner_desc}
