include ../icons3d.pug
include ../title/title.pug

#blockchain-about
  .main-feature
    include ./parallax/parallax-left.pug
    if youtube.use
      #video_modal.modal.video-popup
        .modal-content
          |
          |
          .headline
            h4 #{$t.blockchain.feature_title}
            |
            |
            button.btn-icon.modal-close.waves-effect
              i.material-icons close
          .text-center
            #video_iframe
    .container.fixed-width-md-up
      .row.spacing6-sm-up
        .col-md-6.col-sm-12
          +title-main($t.blockchain.feature_title2)
          p.pb-2.use-text-subtitle2.text-center.text-md-start
            | #{$t.blockchain.feature_desc1}
          .card.video
            figure
              |
              |
              img(src=imgAPI.photosL[9] alt='cover')/
              |
              |
            |
            |
            button.btn-icon.play-btn.modal-trigger.waves-effect(data-target="video_modal" data-video="f82BZoIR7TA")
              i.ion-ios-play-outline
            |
            |
        .col-md-6.col-sm-12.feature-wrap.px-0
          .counter
            .lower
              .card.paper
                .icon
                  +icons3d('mdi-code-not-equal-variant', 'primary')
                .glow.primary
                  h4.use-text-title2 +600
                  p #{$t.blockchain.about_counter1}
              .card.paper
                .icon
                  +icons3d('mdi-hexagon-slice-4', 'light-blue')
                .glow.light-blue-bg
                  h4.use-text-title2 +200x
                  p #{$t.blockchain.about_counter2}
            .higher
              .card.paper
                .icon
                  +icons3d('mdi-lightning-bolt-circle', 'secondary')
                .glow.secondary
                  h4.use-text-title2 50x
                  p #{$t.blockchain.about_counter3}
              .card.paper
                .icon
                  +icons3d('mdi-source-branch', 'accent')
                .glow.accent
                  h4.use-text-title2 +20M
                  p #{$t.blockchain.about_counter4}
            
