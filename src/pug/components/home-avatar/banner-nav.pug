- var hero_banner = 'animation'

#avatar-banner-nav
  .root
    .row
      .col-lg-1.p-0
        #side_nav_icon.hidden-lg-down
          include side-navigation.pug
      .col-lg-11.col-md-12.p-0
        .banner
          .cover
            .figure
              if hero_banner === 'animation'
                include ../hero-banner/animation
              else if hero_banner === 'animation-slideshow'
                include ../hero-banner/animation-slideshow
              else if hero_banner === 'slideshow'
                include ../hero-banner/slideshow
              else if hero_banner === 'video'
                include ../hero-banner/video
              else
                .img(style="background-image: url("+brand.cover+")")
              .overlay
          .setting-icon
            include ../header/top-nav/settings
          .text
            h4.use-text-title2 #{$t.avatar.banner_greeting},
            h2.use-text-title
              | #{$t.avatar.banner_iam}
              | #{brand.profileName}, 
              | #{brand.profileTitle2}
            .hidden-md-down
              h5.use-text-subtitle2 #{$t.avatar.banner_desc}
              .socmed
                a.btn-icon.margin.waves-effect(href="#")
                  i.ion-logo-facebook
                |
                |
                a.btn-icon.margin.waves-effect(href="#")
                  i.ion-logo-twitter
                |
                |
                a.btn-icon.margin.waves-effect(href="#")
                  i.ion-logo-instagram
                |
                |
                a.btn-icon.margin.waves-effect(href="#")
                  i.ion-logo-linkedin
                |
                |