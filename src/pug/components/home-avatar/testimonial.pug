#avatar-testimonial
  .root
    .hidden-lg-down
      include ./parallax/parallax-full.pug
    .container
      .row
        .col-lg-7.col-md-12
          +title-main($t.avatar.testi_title)
    .carousel
      .slick-carousel#testimonial_carousel(data-length=testiContent.length)
        .item.show-lg-up
          .item-props-first
        each item in testiContent
          .item
            +rating-card(item.avatar, item.title, item.name, item.text, item.rating)
    .floating-artwork
      .container.fixed-width
        .artwork
