include ./trending-data.pug
include ../title/parallax-title.pug
include ../cards/media/playlist-card.pug

#nft-trending
  .root.nft-trending
    .container
      +parallax-title($t.nft.trending_bgtitle, $t.nft.trending_subtitle, "triple-custom")
      .tab
        .row.spacing2.justify-content-center
          .col-lg-8.col-md-10.col-sm-12.px-0
            .d-flex.justify-content-center
              ul.tabs.tabs-basic.primary
                li.tab
                  |
                  |
                  a.tab-label.waves-effect.active(href='#tab-1') Trending
                  |
                  |
                li.tab
                  |
                  |
                  a.tab-label.waves-effect(href='#tab-2') Top
                  |
                  |
                li.tab
                  |
                  |
                  a.tab-label.waves-effect(href='#tab-3') Collectible
                  |
                  |
                li.tab
                  |
                  |
                  a.tab-label.waves-effect(href='#tab-4') Art
                  |
                  |
                li.tab
                  |
                  |
                  a.tab-label.waves-effect(href='#tab-5') Animation
                  |
                  |
          .col-lg-2.col-md-2.col-sm-12.ps-1.pe-0.show-md-up
            |
            |
            a.btn.secondary.btn-large
              | #{$t.nft.trending_all}
            |
            |
        .tab-content
          #tab-1.tab-item.active
            .row.justify-content-center.spacing4-sm-down
              each item, index in trendingData
                .col-sm-6.py-2
                  .wow.fadeInUpShort(data-wow-delay=0.5 + 0.1 * index + 's' data-wow-duration="0.5s" data-wow-offset="-500")
                    +playlist-card(
                      item.img,
                      item.avatar,
                      item.logo,
                      item.title,
                      item.name,
                      item.desc,
                      item.count,
                      item.items,
                      item.color,
                      item.verifiedUser,
                      item.verifiedItem,
                      item.withDeco,
                      item.href
                    )
