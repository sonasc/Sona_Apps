extends auth-frame.pug

block variables
  - var title = $t.login_title
  - var subtitle = $t.login_subtitle
  - var authType = 'login'

block auth_content
  div.form-style
    .head
      h3.use-text-title2
        | #{$t.login}
      a.btn.btn-small.button-link(href=link.register)
        i.mdi.mdi-arrow-right
        | #{$t.login_create}
    include ./social-auth
    .separator
      p #{$t.login_or}
    form#login_form
      .row.spacing3.mb-0
        .col-sm-12
          .input-field.dark
            |
            |
            input.validate#email(type="email" name="email" required)/
            |
            |
            label(for='email') #{$t.login_email}
            |
            |
        .col-sm-12
          .input-field.dark
            |
            |
            input.validate#password(type="password" name="password" required)/
            |
            |
            label(for='password') #{$t.login_password}
            |
            |
      .form-helper.mt-sm-4
        .form-control-label
          |
          |
          label
            |
            |
            input.filled-in.secondary(type='checkbox')/
            |
            |
            span #{$t.login_remember}
            |
            |
          |
          |
        |
        |
        a.btn-flat.button-link(href='#') #{$t.login_forgot}
        |
        |
      .btn-area
        |
        |
        button.btn.primary.btn-large.block.waves-effect(type="submit") #{$t.continue}
        |
        |
