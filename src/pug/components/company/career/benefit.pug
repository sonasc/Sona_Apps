#about-career
  .root
    .container
      .row.spacing6
        .col-md-5.col-sm-12.px-6
          +title-main($t.career_benefit_title, 'left', true)
          p.use-text-subtitle2.mb-8
            | #{$t.career_benefit_desc}
          p.use-text-subtitle2
            | #{$t.career_subtitle}
        .col-md-7.col-sm-12.px-sm-8
          .benefit-list
            each item, index in benefitList
              div
                .wow.fadeInRightShort(data-wow-offset='50', data-wow-delay=(0.5 + 0.1 * index) + 's', data-wow-duration='0.5s')
                  .benefit
                    .bg(class=item.color)
                      +icons3d(item.icon, item.color)
                    .text
                      h3.use-text-subtitle2 #{item.title}
                      p.use-text-paragraph #{item.desc}
    .container.banner-wrap
      .row.justify-content-center
        .col-lg-10.col-md-12.px-0(class="sm:px-4")
          .banner.wow.fadeInUpShort(data-wow-offset='100', data-wow-delay='0.5s', data-wow-duration='0.5s')
