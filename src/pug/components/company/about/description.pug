include ../../title/parallax-title.pug

#company-about
  .container.desc
    +parallax-title($t.about_bgtitle, $t.about_title, 'triple-custom')
    .paper
      .row.spacing6.spacing2-sm-down
        .col-md-7.col-sm-12
          p #{$t.about_desc1}
          p #{$t.about_desc2}
          h5.quote.use-text-subtitle2
            |
            |
            i.ion-ios-quote
            em #{$t.about_quote}
            |
            |
        .col-md-5.col-sm-12
          .counter
            .card.primary
              |
              |
              img(src=imgAPI.photosP[15] title='work')/
              |
              |
              .count
                h2.use-text-title +300
                h5.use-text-subtitle2 Developers
            .card.secondary
              |
              |
              img(src=imgAPI.photosS[9], title='founded')/
              |
              |
              .count
                h5.use-text-subtitle2 Founded In
                h2.use-text-title 2011
            .card.accent
              |
              |
              img(src=imgAPI.photosL[54], title='project')/
              |
              |
              .count
                h2.use-text-title +1000
                h5.use-text-subtitle Projects
