extends ../layouts/app.pug

block variables
  - var pageTitle = " Blog"
  - var pageName = "blog"
  - var menuLanding = "ai"

block content
  include ../components/cards/post/news-card.pug
  div#blog-page
    .main-wrap
      include ../components/header/blog-header.pug
      .container-front.container-wrap.higher-top
        .inner-page
          .container
            .row.spacing4-sm-down
              |
              |
              |
              // ##### HEADLINE #####
              .col-sm-12.px-0.px-sm-3
                include ../components/company/blog/headline.pug
              // ##### END HEADLINE #####
              |
              |
              |
              // ##### HIGHLIGHT POST #####
              .row.mt-3
                .col-md-6.col-sm-12.px-0.px-sm-3
                  +news-card(
                    'Proin pretium arcu eget metus porta consectetur Pellentesque habitant',
                    'Maecenas rutrum dolor sed nisi',
                    'landscape',
                    'over',
                    imgAPI.photosL[37],
                    link.blogDetail
                  )
                .col-md-6.col-sm-12.px-0.px-sm-3
                  +news-card(
                    'Proin pretium arcu eget metus porta consectetur Pellentesque habitant',
                    'Maecenas rutrum dolor sed nisi',
                    'landscape',
                    'over',
                    imgAPI.photosL[37],
                    link.blogDetail
                  )
              // ##### END HIGHLIGHT POST #####
              |
              |
              |
              .row
                // ##### BLOG POST #####
                - var n = 0
                while n < 12
                  .col-md-4.col-sm-6.mt-5(data-index=n++)
                    .wow.fadeInUpShort(
                      data-wow-offset="-100"
                      data-wow-delay=n*0.1 + 0.5 + 's'
                      data-wow-duration="0.5s"
                    )
                      +news-card(
                        'Proin pretium arcu eget metus porta consectetur Pellentesque habitant',
                        'Maecenas rutrum dolor sed nisi',
                        'portrait',
                        'over',
                        imgAPI.photosL[30+n],
                        link.blogDetail
                      )
              .arrow
                .d-flex.justify-content-between
                  .btn-flat.waves-effect
                    i.material-icons.left arrow_back
                    | #{$t.btn_prev}
                  .btn-flat.waves-effect
                    | #{$t.btn_next}
                    i.material-icons.right arrow_forward
                // ##### END BLOG POST #####
                |
                |
                |
      |
      |
      |
      // ##### FOOTER #####
      #footer.space-top
        include ../components/footer/main.pug
      // ##### END FOOTER #####
      |
      |
      |
