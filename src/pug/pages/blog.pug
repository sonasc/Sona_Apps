extends ../layouts/app.pug

block variables
  - var pageTitle = " Blog"
  - var pageName = "blog"
  - var menuLanding = "ai"

block content
  include ../components/cards/post/news-card.pug
  div#blog-page
    .main-wrap
      include ../components/header/blog-header.pug
      .container-front.container-wrap.higher-top
        .inner-page
          .container
            .row.spacing4-sm-down
              |
              |
              |
              // ##### HEADLINE #####
              .col-sm-12.px-1.px-sm-3
                include ../components/company/blog/headline.pug
              // ##### END HEADLINE #####
              |
              |
              |
              // ##### HIGHLIGHT POST #####
              .row.mt-3
                .col-md-6.col-sm-12.px-0.px-sm-3
                  +news-card(
                    'Proin pretium arcu eget metus porta consectetur Pellentesque habitant',
                    'Maecenas rutrum dolor sed nisi',
                    'landscape',
                    'over',
                    imgAPI.photosL[37],
                    link.blogDetail
                  )
                .col-md-6.col-sm-12.px-0.px-sm-3
                  +news-card(
                    'Proin pretium arcu eget metus porta consectetur Pellentesque habitant',
                    'Maecenas rutrum dolor sed nisi',
                    'landscape',
                    'over',
                    imgAPI.photosL[37],
                    link.blogDetail
                  )
              // ##### END HIGHLIGHT POST #####
              |
              |
              |
              .row.mt-3
                // ##### BLOG POST #####
                .col-md-8.col-sm-12.px-0.px-sm-4
                  - var n = 0
                  while n < 12
                    div(data-index=n++ class= n > 0 ? 'lg:mt-5 mt-3' : '')
                      +news-card(
                        'Proin pretium arcu eget metus porta consectetur Pellentesque habitant',
                        'Maecenas rutrum dolor sed nisi',
                        'landscape',
                        'over',
                        imgAPI.photosL[30+n],
                        link.blogDetail
                      )
                  .arrow
                    .d-flex.justify-content-between.mt-10
                      .btn-flat.waves-effect
                        i.material-icons.left arrow_back
                        | #{$t.btn_prev}
                      .btn-flat.waves-effect
                        | #{$t.btn_next}
                        i.material-icons.right arrow_forward
                // ##### END BLOG POST #####
                |
                |
                |
                // ##### SIDEBAR #####
                .col-md-4.col-sm-12.px-0.px-sm-4
                  include ../components/company/blog/sidebar/sidebar.pug
                // ##### END SIDEBAR #####
      |
      |
      |
      // ##### FOOTER #####
      #footer.space-top
        include ../components/footer/main.pug
      // ##### END FOOTER #####
      |
      |
      |
