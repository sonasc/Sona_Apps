extends ../layouts/app.pug

block variables
  - var pageTitle = " Homepage Wallet"
  - var pageName = "homepage"
  - var headerHome = true
  - var menuLanding = "wallet"
  - var prefix = "wallet"

block content
  div#home
    .main-wrap
      include ../components/header/main.pug
      |
      |
      |
      main.container-wrap.scroll-nav-content
        // ##### BANNER #####
        section#home
          include ../components/home-wallet/banner-slider.pug
        // ##### END BANNER #####
        |
        |
        |
        // ##### STEP #####
        section#howto.space-top
          include ../components/home-wallet/step.pug
        // ##### END STEP #####
        |
        |
        |
        // ##### CHART PRICE #####
        section#chart.space-top.space-top-short--sm-down
          include ../components/home-wallet/chart-price.pug
        // ##### END CHART PRICE #####
        |
        |
        |
        // ##### CHART FEATURE #####
        section#feature.space-top.space-top-short--sm-down
          include ../components/home-wallet/feature.pug
        // ##### END FEATURE #####
        |
        |
        |
        // ##### DISCOVER #####
        section#discover.space-top
          include ../components/home-wallet/benefit.pug
        // ##### END DISCOVER #####
        |
        |
        |
        // ##### SECURITY #####
        section#securty.space-top-short
          include ../components/home-wallet/security.pug
        // ##### END SECURITY #####
        |
        |
        |
        // ##### COUNTER #####
        section#community.space-top--sm-up
          include ../components/home-wallet/counter.pug
        // ##### END COUNTER #####
        |
        |
        |
        // ##### TESTIMONIAL #####
        section#testimonial.space-top-short--up-sm
          include ../components/home-wallet/testimonials.pug
        // ##### END TESTIMONIAL #####
        |
        |
        |
        // ##### CALL ACTION #####
        section#call-action.space-bottom.space-top.space-top-short--sm-down
          include ../components/home-wallet/call-action.pug
        // ##### END CALL ACTION #####
        |
        |
        |
      // ##### FOOTER #####
      include ../components/footer/decoration/line.pug
      +footer-deco
        include ../components/footer/main.pug
      // ##### END FOOTER #####
      |
      |
      |
      // ##### NOTIFICATIONS #####
      .hidden-md-down
        include ../components/notifications.pug
      // ##### END NOTIFICATIONS #####
      |
      |
      |
      // ##### CORNER #####
      .hidden-md-down
        include ../components/corner.pug
      // ##### END CORNER #####
      |
      |